# WebSocket Configuration
WS_PATH=/ws
WS_CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Agent Behavior
MAX_LOGS_IN_MEMORY=1000
APPROVAL_TIMEOUT=300000
MAX_RETRIES=3
